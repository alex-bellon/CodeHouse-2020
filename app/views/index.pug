extends layout

block content
  //- h1= Name
  //- p Welcome to my Website!

  html
    head
    
      body
        <div class="topnav">
          <a class="active" href="#home">Home</a>
          <a href="#upload">Upload Business Info Here</a>
          //- <a href="#catalogue">Full Catalogue of Businesses</a>
        </div>    

  h4(style={color: 'black', 'font-size': '32px' }) Who Are We And What Do We Do?
  p The purpose of this website is to serve as an online database for Minority-owned Small Businesses in your area!

  h3(style={color: 'purple', 'font-size': '24px'}) <i>Use our search engine to get started!</i>
  
  <div style="background-image: url('https://www.openbusinesscouncil.org/wp-content/uploads/2019/08/small-business-shops-ss-1920.jpg'); width:100%; margin:auto; padding:50px;"> 
    div(class="search-body")
      form(action="/results", method="post" style="text-align:center;")
        //- input#search-bar(type="text", placeholder="Category", name="category")
    
        select#category(name = "category")
          each val in [{value: "", name: "Select Category"},{value: "Food", name:"Food"},{value: "Beauty", name:"Beauty"},{value: "Health & Wellness", name:"Health & Wellness"}, {value: "Retail", name:"Retail"}, {value: "Entertainment", name:"Entertainment"}, {value: "Services", name:"Services"}]
            option(value=val.value) #{val.name}


        select#minority-list(name = "minorityGroup")
          each val in [{value: "", name: "Select Minority Group"},{value: "Black/African-American", name:"Black/African-American"},{value: "Asian", name:"Asian"},{value: "Hispanic/Latinx", name:"Hispanic/Latinx"}, {value: "LGBTQ+", name:"LGBTQ+"}, {value: "No Preference", name:"No Preference"}]
            option(value=val.value) #{val.name}
            //- input#search-bar(type="text", placeholder="Search business", name="bizIndex")

        button#search-btn(type="submit") Search
  </div>

extends layout

block content
  //- h1= Name
  //- p Welcome to my Website!

  html
    head
        title faketitle
    body
        h1 Kuber-Ladies Home Page	

  form(action="/results", method="post")
    input#search-bar(type="text", placeholder="Category", name="category")
    input#search-bar(type="text", placeholder="Search business", name="bizIndex")
    select#minority-list(name = "minorityGroup")
      each val in [{value: "", name: "Select Minority Group"},{value: "Black/African-American", name:"Black/African-American"},{value: "Asian", name:"Asian"},{value: "Hispanic/Latino", name:"Hispanic/Latino"}, {value: "LGBTQ+", name:"LGBTQ+"}]
        option(value=val.value) #{val.name}
    button#search-btn(type="submit") Search

  p The purpose of this website is to serve as an online database for Minority-owned Small Businesses in your area!
  h3 Use our search engine to get started!

